{
  "name": "weatherapp",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "concurrently": "^5.2.0",
    "react": "^16.13.1",
    "react-scripts": "3.4.1"
  },
  "scripts": {
    "dev": "concurrently --kill-others \"cd client && npm start\" \"cd server && npm start\"",
    "start": "cd server/bin && node www.js",
    "install-client": "cd client && npm install && cd ..",
    "install-server": "cd server && npm install && cd ..",
    "heroku-postbuild": "npm run install-client && npm run install-server && cd client && npm run build && cd ../server && npm start",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
